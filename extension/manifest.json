{
  "manifest_version": 3,
  "name": "Family Friendly Tube",
  "version": "1.0",
  "description": "Filters YouTube captions for profanity and mutes audio when detected.",
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["utils/profanity_list.json"],
      "matches": ["<all_urls>"]
    }
  ]
}